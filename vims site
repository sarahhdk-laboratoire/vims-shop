.toast b{display:block; margin-bottom:2px}/* VIMS – faux site (démo) : panier + favoris + analyse peau (simulation)
   Tout est stocké en localStorage, aucun paiement réel. */

const STORAGE = {
  cart: "vims_cart_v1",
  favs: "vims_favs_v1"
};

const formatEUR = (n) =>
  new Intl.NumberFormat("fr-FR", { style:"currency", currency:"EUR" }).format(n);

function load(key, fallback){
  try{
    const raw = localStorage.getItem(key);
    return raw ? JSON.parse(raw) : fallback;
  }catch(e){ return fallback; }
}
function save(key, val){
  localStorage.setItem(key, JSON.stringify(val));
}

function toast(title, msg){
  let el = document.querySelector("#toast");
  if(!el){
    el = document.createElement("div");
    el.id="toast";
    el.className="toast";
    document.body.appendChild(el);
  }
  el.innerHTML = `<b>${title}</b><div>${msg}</div>`;
  el.classList.add("show");
  clearTimeout(window.__toastT);
  window.__toastT = setTimeout(()=> el.classList.remove("show"), 2200);
}

function updateBadges(){
  const cart = load(STORAGE.cart, []);
  const favs = load(STORAGE.favs, []);
  const cartCount = cart.reduce((s,i)=> s + (i.qty||1), 0);

  document.querySelectorAll("[data-cart-badge]").forEach(b=> b.textContent = cartCount);
  document.querySelectorAll("[data-fav-badge]").forEach(b=> b.textContent = favs.length);
}

function addToCart(item){
  const cart = load(STORAGE.cart, []);
  const idx = cart.findIndex(x => x.id === item.id && JSON.stringify(x.options||{}) === JSON.stringify(item.options||{}));
  if(idx >= 0){
    cart[idx].qty = (cart[idx].qty || 1) + (item.qty || 1);
  }else{
    cart.push({ ...item, qty: item.qty || 1 });
  }
  save(STORAGE.cart, cart);
  updateBadges();
  toast("Ajouté au panier", `${item.name} • ${formatEUR(item.price)}`);
}

function removeFromCart(index){
  const cart = load(STORAGE.cart, []);
  cart.splice(index,1);
  save(STORAGE.cart, cart);
  updateBadges();
}

function setCartQty(index, qty){
  const cart = load(STORAGE.cart, []);
  cart[index].qty = Math.max(1, parseInt(qty||"1",10));
  save(STORAGE.cart, cart);
  updateBadges();
}

function toggleFav(product){
  const favs = load(STORAGE.favs, []);
  const i = favs.findIndex(x => x.id === product.id);
  if(i >= 0){
    favs.splice(i,1);
    toast("Retiré des favoris", product.name);
  }else{
    favs.push(product);
    toast("Ajouté aux favoris", product.name);
  }
  save(STORAGE.favs, favs);
  updateBadges();
}

function isFav(id){
  const favs = load(STORAGE.favs, []);
  return favs.some(x => x.id === id);
}

function mountActiveNav(){
  const path = (location.pathname.split("/").pop() || "index.html").toLowerCase();
  document.querySelectorAll(".navlinks a").forEach(a=>{
    const href = (a.getAttribute("href") || "").toLowerCase();
    if(href === path) a.classList.add("active");
  });
}

function mountCommon(){
  updateBadges();
  mountActiveNav();

  // handlers data-add-cart / data-fav
  document.addEventListener("click", (e)=>{
    const addBtn = e.target.closest("[data-add-cart]");
    if(addBtn){
      const payload = JSON.parse(addBtn.getAttribute("data-add-cart"));
      addToCart(payload);
      return;
    }
    const favBtn = e.target.closest("[data-toggle-fav]");
    if(favBtn){
      const payload = JSON.parse(favBtn.getAttribute("data-toggle-fav"));
      toggleFav(payload);
      // update button state
      favBtn.setAttribute("aria-pressed", isFav(payload.id) ? "true" : "false");
      favBtn.innerHTML = isFav(payload.id) ? "♥ Favori" : "♡ Favori";
      return;
    }
  });
}

function renderCart(){
  const tbody = document.querySelector("#cartBody");
  const totalEl = document.querySelector("#cartTotal");
  const emptyEl = document.querySelector("#cartEmpty");
  if(!tbody) return;

  const cart = load(STORAGE.cart, []);
  if(cart.length === 0){
    emptyEl?.classList.remove("hidden");
  }else{
    emptyEl?.classList.add("hidden");
  }

  tbody.innerHTML = "";
  let total = 0;

  cart.forEach((item, idx)=>{
    const line = item.price * (item.qty||1);
    total += line;

    const opt = item.options ? Object.entries(item.options).map(([k,v]) => `${k}: ${v}`).join(" • ") : "";
    const tr = document.createElement("tr");
    tr.innerHTML = `
      <td>
        <div style="font-weight:900">${item.name}</div>
        <div class="mini">${opt || item.note || ""}</div>
      </td>
      <td>${formatEUR(item.price)}</td>
      <td>
        <input class="input" style="max-width:110px" type="number" min="1" value="${item.qty||1}" data-qty="${idx}">
      </td>
      <td style="font-weight:900">${formatEUR(line)}</td>
      <td style="text-align:right">
        <button class="btn small danger" data-remove="${idx}">Retirer</button>
      </td>
    `;
    tbody.appendChild(tr);
  });

  totalEl.textContent = formatEUR(total);

  tbody.addEventListener("input", (e)=>{
    const inp = e.target.closest("[data-qty]");
    if(!inp) return;
    const idx = parseInt(inp.getAttribute("data-qty"),10);
    setCartQty(idx, inp.value);
    renderCart();
  });

  tbody.addEventListener("click", (e)=>{
    const btn = e.target.closest("[data-remove]");
    if(!btn) return;
    const idx = parseInt(btn.getAttribute("data-remove"),10);
    removeFromCart(idx);
    renderCart();
    toast("Panier mis à jour", "Article retiré.");
  });

  document.querySelector("#checkoutBtn")?.addEventListener("click", ()=>{
    toast("Démo", "Paiement désactivé (site maquette).");
  });

  document.querySelector("#clearCartBtn")?.addEventListener("click", ()=>{
    save(STORAGE.cart, []);
    updateBadges();
    renderCart();
    toast("Panier vidé", "Tout est supprimé (local).");
  });
}

function renderFavs(){
  const wrap = document.querySelector("#favWrap");
  const emptyEl = document.querySelector("#favEmpty");
  if(!wrap) return;

  const favs = load(STORAGE.favs, []);
  wrap.innerHTML = "";

  if(favs.length === 0){
    emptyEl?.classList.remove("hidden");
    return;
  }
  emptyEl?.classList.add("hidden");

  favs.forEach((p)=>{
    const card = document.createElement("div");
    card.className = "feature";
    card.innerHTML = `
      <div style="display:flex; align-items:flex-start; justify-content:space-between; gap:10px">
        <div>
          <div style="font-weight:900">${p.name}</div>
          <div class="help">${p.desc || "Sélection VIMS."}</div>
        </div>
        <div class="tag">${p.tag || "VIMS"}</div>
      </div>
      <div style="margin-top:12px; display:flex; gap:10px; flex-wrap:wrap">
        <button class="btn small" data-add-cart='${JSON.stringify({id:p.id, name:p.name, price:p.price||0, type:"skincare"})}'>Ajouter au panier</button>
        <button class="btn small ghost" data-toggle-fav='${JSON.stringify(p)}' aria-pressed="true">♥ Favori</button>
      </div>
    `;
    wrap.appendChild(card);
  });
}

function mountSkinAnalysis(){
  const form = document.querySelector("#analysisForm");
  const out = document.querySelector("#analysisOut");
  if(!form || !out) return;

  const products = {
    cleanser: { id:"vims-cleanser", name:"VIMS Cleanser Velours", price:34, tag:"Nettoyant", desc:"Nettoyant doux, barrière respectée." },
    serum:    { id:"vims-serum",    name:"VIMS Serum Lumière", price:62, tag:"Sérum", desc:"Éclat + hydratation ciblée." },
    cream:    { id:"vims-cream",    name:"VIMS Crème Signature", price:58, tag:"Crème", desc:"Confort luxe, fini soyeux." },
    spf:      { id:"vims-spf",      name:"VIMS SPF 50+ Cashmere", price:42, tag:"SPF", desc:"Protection invisible, non gras." },
    night:    { id:"vims-night",    name:"VIMS Night Repair", price:74, tag:"Nuit", desc:"Récupération et texture." },
  };

  form.addEventListener("submit", (e)=>{
    e.preventDefault();
    const fd = new FormData(form);

    const skin = fd.get("skin");
    const concern = fd.get("concern");
    const sensitivity = fd.get("sensitivity");
    const finish = fd.get("finish");

    // logique simple (simulation)
    const score = {
      hydration: skin === "sèche" ? 82 : skin === "mixte" ? 62 : 48,
      oil: skin === "grasse" ? 78 : skin === "mixte" ? 58 : 34,
      barrier: sensitivity === "oui" ? 55 : 74
    };

    const routine = [];
    routine.push(products.cleanser);

    if(concern === "éclat" || concern === "taches") routine.push(products.serum);
    if(concern === "rides") routine.push(products.night);
    if(skin !== "grasse" || finish === "glow") routine.push(products.cream);
    routine.push(products.spf);

    // rendu
    const chips = `
      <div class="pillrow" style="margin:10px 0 14px">
        <div class="pill"><span class="dot"></span> Hydratation <b>${score.hydration}%</b></div>
        <div class="pill"><span class="dot"></span> Sébum <b>${score.oil}%</b></div>
        <div class="pill"><span class="dot"></span> Barrière <b>${score.barrier}%</b></div>
      </div>
    `;

    const list = routine.map(p => `
      <div class="feature" style="padding:14px">
        <div style="display:flex; align-items:flex-start; justify-content:space-between; gap:10px">
          <div>
            <div style="font-weight:900">${p.name}</div>
            <div class="help">${p.desc}</div>
          </div>
          <div class="tag">${p.tag}</div>
        </div>
        <div style="margin-top:10px; display:flex; align-items:center; justify-content:space-between; gap:10px; flex-wrap:wrap">
          <div style="font-weight:900">${formatEUR(p.price)}</div>
          <div style="display:flex; gap:10px; flex-wrap:wrap">
            <button class="btn small" data-add-cart='${JSON.stringify({id:p.id, name:p.name, price:p.price, type:"skincare", note:"Recommandé par VIMS SkinScan"})}'>Ajouter au panier</button>
            <button class="btn small ghost" data-toggle-fav='${JSON.stringify(p)}' aria-pressed="${isFav(p.id) ? "true" : "false"}">${isFav(p.id) ? "♥ Favori" : "♡ Favori"}</button>
          </div>
        </div>
      </div>
    `).join("");

    out.innerHTML = `
      <div class="notice"><b>Résultat VIMS SkinScan (démo)</b><br>
      Peau <b>${skin}</b> • Préoccupation <b>${concern}</b> • Sensibilité <b>${sensitivity}</b> • Fini <b>${finish}</b></div>
      ${chips}
      <h3 style="margin: 0 0 10px">Routine personnalisée (VIMS)</h3>
      <div style="display:grid; gap:12px">${list}</div>
    `;
    toast("Analyse terminée", "Routine personnalisée générée.");
    updateBadges();
  });
}

document.addEventListener("DOMContentLoaded", ()=>{
  mountCommon();
  renderCart();
  renderFavs();
  mountSkinAnalysis();
})
