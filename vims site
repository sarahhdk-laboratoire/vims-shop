  <script src="assets/app.js"></script>
  <script>
    const mirrors = [
      {
        id:"vims-mirror-oval",
        name:"VIMS Mirror — Ovale Signature",
        price: 1290,
        type:"mirror",
        tag:"Best-seller",
        desc:"Analyse peau + recommandations. Ovale luxe, très Upper East Side."
      },
      {
        id:"vims-mirror-arch",
        name:"VIMS Mirror — Arche Dorée",
        price: 1490,
        type:"mirror",
        tag:"Luxe",
        desc:"Arche chic, présence sculpturale. UI minimaliste, détail doré."
      },
      {
        id:"vims-mirror-rect",
        name:"VIMS Mirror — Rectangle Épuré",
        price: 1190,
        type:"mirror",
        tag:"Épuré",
        desc:"Format salle de bain premium. Lecture peau et recommandations quotidiennes."
      }
    ];

    const skincare = [
      { id:"vims-cleanser", name:"VIMS Cleanser Velours", price:34, type:"skincare", tag:"Nettoyant", desc:"Doux, barrière respectée." },
      { id:"vims-serum", name:"VIMS Serum Lumière", price:62, type:"skincare", tag:"Sérum", desc:"Éclat + hydratation ciblée." },
      { id:"vims-cream", name:"VIMS Crème Signature", price:58, type:"skincare", tag:"Crème", desc:"Confort luxe, fini soyeux." },
      { id:"vims-spf", name:"VIMS SPF 50+ Cashmere", price:42, type:"skincare", tag:"SPF", desc:"Protection invisible." },
      { id:"vims-night", name:"VIMS Night Repair", price:74, type:"skincare", tag:"Nuit", desc:"Récupération et texture." }
    ];

    const borderOptions = ["Doré", "Blanc", "Argenté"];
    const sizeOptions = ["S (50 cm)", "M (70 cm)", "L (90 cm)"];

    function card(p){
      const isMirror = p.type === "mirror";
      const favPayload = { id:p.id, name:p.name, price:p.price, tag:p.tag, desc:p.desc };

      const optionUI = isMirror ? `
        <div class="kv">
          <div class="box">
            <b>Bordure</b>
            <select class="input" data-opt-border>
              ${borderOptions.map(x=>`<option>${x}</option>`).join("")}
            </select>
          </div>
          <div class="box">
            <b>Taille</b>
            <select class="input" data-opt-size>
              ${sizeOptions.map(x=>`<option>${x}</option>`).join("")}
            </select>
          </div>
        </div>
      ` : `
        <div class="kv">
          <div class="box"><b>Texture</b><span>Cashmere</span></div>
          <div class="box"><b>Univers</b><span>Luxe épuré</span></div>
        </div>
      `;

      return `
        <article class="product" data-name="${p.name.toLowerCase()}" data-type="${p.type}">
          <div class="head">
            <div>
              <h3 class="title">${p.name}</h3>
              <p class="meta">${p.desc}</p>
            </div>
            <div class="tag">${p.tag}</div>
          </div>
          <div class="body">${optionUI}</div>
          <div class="foot">
            <div>
              <div class="price">${formatEUR(p.price)}</div>
              <div class="smallmuted">${isMirror ? "Inclut SkinScan + recommandations" : "Recommandé par VIMS"}</div>
            </div>
            <div style="display:flex; gap:10px; flex-wrap:wrap; align-items:center">
              <button class="btn small ghost" data-toggle-fav='${JSON.stringify(favPayload)}' aria-pressed="${isFav(p.id) ? "true" : "false"}">${isFav(p.id) ? "♥ Favori" : "♡ Favori"}</button>
              <button class="btn small primary" data-add-mirror="${p.id}">Ajouter</button>
            </div>
          </div>
        </article>
      `;
    }

    const grid = document.getElementById("productGrid");
    const skinGrid = document.getElementById("skincareGrid");
    grid.innerHTML = mirrors.map(card).join("");
    skinGrid.innerHTML = skincare.map(p => `
      <article class="product">
        <div class="head">
          <div>
            <h3 class="title">${p.name}</h3>
            <p class="meta">${p.desc}</p>
          </div>
          <div class="tag">${p.tag}</div>
        </div>
        <div class="body">
          <div class="kv">
            <div class="box"><b>Signature</b><span>VIMS</span></div>
            <div class="box"><b>Finition</b><span>Luxe discret</span></div>
          </div>
        </div>
        <div class="foot">
          <div class="price">${formatEUR(p.price)}</div>
          <div style="display:flex; gap:10px; flex-wrap:wrap; align-items:center">
            <button class="btn small ghost" data-toggle-fav='${JSON.stringify(p)}' aria-pressed="${isFav(p.id) ? "true" : "false"}">${isFav(p.id) ? "♥ Favori" : "♡ Favori"}</button>
            <button class="btn small primary" data-add-cart='${JSON.stringify({id:p.id, name:p.name, price:p.price, type:"skincare"})}'>Ajouter</button>
          </div>
        </div>
      </article>
    `).join("");

    document.addEventListener("click", (e)=>{
      const b = e.target.closest("[data-add-mirror]");
      if(!b) return;
      const id = b.getAttribute("data-add-mirror");
      const wrap = b.closest("article");
      const p = mirrors.find(x=>x.id===id);
      const border = wrap.querySelector("[data-opt-border]")?.value || "Doré";
      const size = wrap.querySelector("[data-opt-size]")?.value || "M (70 cm)";
      addToCart({
        id: p.id,
        name: p.name,
        price: p.price,
        type:"mirror",
        options: { Bordure: border, Taille: size }
      });
    });

    // filtre recherche
    const q = document.getElementById("q");
    const filter = document.getElementById("filterType");
    function apply(){
      const term = (q.value||"").toLowerCase().trim();
      const type = filter.value;
      document.querySelectorAll(".product").forEach(el=>{
        const name = el.getAttribute("data-name") || "";
        const t = el.getAttribute("data-type") || "skincare";
        const okName = !term || name.includes(term);
        const okType = (type==="all") || (t===type);
        el.style.display = (okName && okType) ? "" : "none";
      });
    }
    q.addEventListener("input", apply);
    filter.addEventListener("change", apply);
  </script>
